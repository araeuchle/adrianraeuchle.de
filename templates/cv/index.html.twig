<div class="container mb-4">
    <h2 class="section-title wow fadeInUp">Lebenslauf</h2>

    <div class="spacer" data-height="60"></div>

    <!-- timeline wrapper -->
    <div class="timeline exp bg-white rounded shadow-dark padding-30 overflow-hidden">

        {% for job in jobs %}
        <!-- timeline item -->
        <div class="timeline-container wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
            <div class="content">
                <span class="time">{{ job.startDate.format('d.m.Y') }} -
                    {% if job.endDate is null %} heute
                    {% else %}{{ job.endDate.format('d.m.Y') }}
                    {% endif %}
                    <span class="inline-block ml-2">({{ job.getDifference() }})</span>
                </span>
                <h3 class="title">{{ job.title }} @ {{ job.company }}</h3>
                <p> {{ job.description | nl2br }}</p>

            </div>
        </div>
        {% endfor %}


        <!-- main line -->
        <span class="line"></span>

    </div>
</div>


