{% extends 'base.html.twig' %}

{% block body %}
<main class=" h-auto mb-auto">
    <section class="relative py-16 bg-gray-300 ">
        <div class="container mx-auto px-4  bg-white p-4 shadow mt-6">
            <h3 class="text-2xl mt-4">{{ project.name }}</h3>

            <p class="mt-4">
                {{ project.description | raw }}
            </p>

            <strong class="mt-4 block">Was habe ich in diesem Projekt gelernt?</strong>
            <p class="mt-4">
                {{ project.lessonsLearned | raw }}
            </p>

            <div class="py-6 mt-32 sm:mt-0">
                <a href="{{ project.githubLink }}"
                   target="_blank"
                   class="bg-blue-700 hover:bg-blue-500 uppercase text-white font-bold hover:shadow-md shadow text-xs px-4 py-2 rounded outline-none focus:outline-none sm:mr-2 mb-1"
                   type="button"
                   style="transition: all 0.15s ease 0s;"
                >
                    Zum Github Projekt
                </a>
            </div>
        </div>
    </section>
</main>
{% endblock %}
