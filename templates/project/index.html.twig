{% extends 'base.html.twig' %}

{% block body %}
<main class="content h-auto mb-auto">
    <section class="relative py-4 bg-gray-300 ">
        <div class="container mx-auto px-4 p-4 mt-6">
            <h3 class="mt-4 text-2xl">Projekte</h3>

            <p>
                Auf dieser Seite möchte ich euch meine Projekte vorstellen, die ich in meiner Freizeit programmiert habe
                und die derzeit noch online sind und aktiv gewartet werden.
            </p>

            <div class="alert alert-info">
                Das nächste Projekt folgt am 18.04.2021 um 20:00 Uhr!
            </div>

            <div class="spacer" data-height="60" style="height: 60px;"></div>

            <!-- portolio wrapper -->
            <div class="row portfolio-wrapper" style="position: relative; height: 594px;">

                {% for project in projects %}
                <!-- portfolio item -->
                <div class="col-md-4 col-sm-6 grid-item creative design">
                    <a href="#small-dialog-{{ project.id }}" class="work-content">
                        <div class="portfolio-item rounded shadow-dark">
                            <div class="details">
                                <span class="term">{{ project.category }}</span>
                                <h4 class="title">{{ project.name }}</h4>
                                <span class="more-button"><i class="icon-options"></i></span>
                            </div>
                            <div class="thumb">
                                <img src="{{ project.getSmallImagePath() }}" alt="smallImage" />
                                <div class="mask"></div>
                            </div>
                        </div>
                    </a>
                    <div id="small-dialog-{{ project.id }}" class="white-popup zoom-anim-dialog mfp-hide">
                        <img src="{{ project.getBigImagePath() }}" alt="bigImage" />
                        <h2>Projektbeschreibung</h2>
                        <p>
                            {{ project.description | raw }}
                        </p>
                        <h2>Was habe ich in dem Projekt gelernt?</h2>
                        <p>
                            {{ project.lessonsLearned | raw }}
                        </p>
                        <a href="{{ project.githubLink }}" class="btn btn-default" target="_blank">Auf Github ansehen</a>
                    </div>
                </div>
                {% endfor %}

            </div>

        </div>
    </section>

</main>
{% endblock %}
