{% extends 'base.html.twig' %}

{% block body %}
<main class=" h-auto mb-auto">
    <section class="relative py-16 bg-gray-300 ">
        <div class="container mx-auto px-4  bg-white p-4 shadow mt-6">
            <h3 class="mt-4 text-2xl">Projekte</h3>

            {% for project in projects %}
                {% if loop.index % 2 == 1 %}
                    <div class="lg:flex">
                {% endif %}
                <div class="lg:w-1/2 w-full bg-white rounded mt-4 mr-4 p-4 shadow text-left border-blue-500 border">
                    <strong>{{ project.name }}</strong><br />
                    <br />

                    {{ project.description | length > 200 ? project.description | striptags | slice(0,200)  ~ '...' : project.description | raw }}<br />
                    <a href="{{ url("projects.detail", {slug: project.slug}) }}" class="text-blue-500">Weiterlesen</a>
                </div>
                {% if loop.index % 2 ==  0%}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </section>

</main>
{% endblock %}
